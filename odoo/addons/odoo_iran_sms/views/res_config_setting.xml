<odoo>
    <record id="kavenegar_res_config_settings_form_view_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.form.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <setting id="iap_credits_setting" position="after">
                <setting string="SMS Provider" id="sms_provider_setting">
                    <button
                        name="%(odoo_iran_sms.kavenegar_sms_provider_action_window)d"
                        icon="oi-arrow-right"
                        type="action"
                        string="Set SMS Provider"
                        class="btn-link"/>
                </setting>
            </setting>
        </field>
    </record>
</odoo>
