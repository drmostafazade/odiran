ufw --force enable
ufw allow ssh
ufw allow 80/tcp
ufw allow 443/tcp

if [[ "$INSTALL_TYPE" == "1" ]]; then
   ufw allow 8069/tcp  # Allow direct Odoo access if needed
fi

